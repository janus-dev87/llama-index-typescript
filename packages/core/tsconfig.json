{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "lib": ["es2015", "dom"],
    "target": "ES2015",
    "resolveJsonModule": true
  },
  "exclude": ["node_modules"]
}
